<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hover Reveal Effect with Lens, Parallax, and Scroll Animations</title>
    <style>
        body {
            margin: 0;
            height: 200vh;
            background-color: #d8c8b8;
            font-family: Arial, sans-serif;
        }
        .container {
            position: relative;
            width: 100vw;
            height: 200vh;
            overflow: hidden;
        }
        .background-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 200vh;
            background: url('https://previews.123rf.com/images/flas100/flas1001303/flas100130300067/18560836-%EB%B2%A0%EC%9D%B4%EC%A7%80-%EC%83%89-%EC%A2%85%EC%9D%B4-%EC%A7%88%EA%B0%90-%EB%B0%9D%EC%9D%80-%EB%B0%B0%EA%B2%BD.jpg') center/cover no-repeat;
            background-size: cover;
            will-change: transform; /* Optimize for parallax */
        }
        .reveal-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 200vh;
            background: url('https://collectionapi.metmuseum.org/api/collection/v1/iiif/397842/775275/main-image') center/cover no-repeat;
            background-size: cover;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease-in-out;
            mask-image: radial-gradient(circle, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 10%);
            -webkit-mask-image: radial-gradient(circle, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 10%);
            will-change: transform, opacity; /* Optimize for animations */
        }
        .lens {
            position: absolute;
            width: 200px; /* Adjust lens size */
            height: 200px;
            border-radius: 50%;
            background: transparent;
            pointer-events: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            mix-blend-mode: screen;
            transition: transform 0.2s ease-out;
            will-change: transform; /* Optimize for animations */
        }
        .lens::before {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            border-radius: 50%;
            background: radial-gradient(circle, rgba(255,0,0,0.5) 5%, rgba(0,255,0,0.5) 50%, rgba(0,0,255,0.5) 95%, rgba(0,0,0,0) 100%);
            filter: blur(2px); /* Enhance RGB split effect */
            mix-blend-mode: lighten;
            border: 2px solid rgba(255, 255, 255, 0.1); /* Minimize transparent border */
            clip-path: circle(50% at 50% 50%); /* Apply effect only to the border */
        }
        .greeting-text {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 3rem;
            color: rgb(0, 0, 0);
            opacity: 0;
            transition: opacity 1s ease-in-out;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="background-image"></div>
        <div class="reveal-image" id="revealImage"></div>
        <div class="lens" id="lens"></div>
        <div class="greeting-text" id="greetingText">Hello, World!</div>
    </div>
    <script>
        const lens = document.getElementById('lens');
        const revealImage = document.getElementById('revealImage');
        const greetingText = document.getElementById('greetingText');
        let isMouseOver = false;
        let targetX = 0, targetY = 0; // Target position
        let currentX = 0, currentY = 0; // Current position
        const damping = 0.1; // Damping effect strength

        // Update target position on mouse move
        document.addEventListener('mousemove', (e) => {
            isMouseOver = true;
            targetX = e.pageX - lens.offsetWidth / 2;
            targetY = e.pageY - lens.offsetHeight / 2;

            // Reveal image with damping effect
            setTimeout(() => {
                revealImage.style.opacity = 1;
                revealImage.style.maskImage = `radial-gradient(circle at ${e.pageX}px ${e.pageY}px, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 10%)`;
                revealImage.style.webkitMaskImage = `radial-gradient(circle at ${e.pageX}px ${e.pageY}px, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 10%)`;
            }, 100); // Add delay
        });

        // Apply damping effect to lens movement
        const updateLensPosition = () => {
            currentX += (targetX - currentX) * damping;
            currentY += (targetY - currentY) * damping;

            lens.style.left = `${currentX}px`;
            lens.style.top = `${currentY}px`;

            requestAnimationFrame(updateLensPosition);
        };

        updateLensPosition();

        // Hide reveal image when mouse leaves
        document.addEventListener('mouseout', () => {
            isMouseOver = false;
            setTimeout(() => {
                if (!isMouseOver) {
                    revealImage.style.opacity = 0;
                }
            }, 500); // Add delay
        });

        // Parallax effect for background image (slower speed)
        window.addEventListener('scroll', () => {
            const scrollY = window.scrollY;
            const parallaxSpeed = 0.25; // Slower parallax speed (half of original)
            document.querySelector('.background-image').style.transform = `translateY(${scrollY * parallaxSpeed}px)`;
        });

        // Scroll-triggered greeting text animation
        window.addEventListener('scroll', () => {
            const scrollY = window.scrollY;
            const triggerPoint = 300; // Adjust trigger point
            if (scrollY > triggerPoint) {
                greetingText.style.opacity = 1;
            } else {
                greetingText.style.opacity = 0;
            }
        });
    </script>
</body>
</html>